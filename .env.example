# ====================
# OpenAI Configuration
# ====================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# ====================
# CLIP Server Configuration
# ====================
CLIP_SERVER_URL=grpc://localhost:51000

# ====================
# Redis Configuration
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password_here
SESSION_TTL=3600

# ====================
# Milvus Configuration
# ====================
# For Milvus Lite (embedded, local file-based)
MILVUS_URI=./data/milvus_lite.db

# For Milvus Standalone (server-based, uncomment to use)
# MILVUS_HOST=localhost
# MILVUS_PORT=19530

# Collection settings
TEXT_COLLECTION_NAME=text_embeddings
IMAGE_COLLECTION_NAME=image_embeddings
TEXT_DIM=1536
IMAGE_DIM=512

# ====================
# Search Configuration
# ====================
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.6

# ====================
# Application Configuration
# ====================
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# ====================
# Data Paths
# ====================
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
IMAGE_DATA_PATH=./data/images
